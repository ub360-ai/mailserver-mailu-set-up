###################################
# Common configuration
###################################

# Secret key for the server (16 bytes random string)
# Keep this secret!
SECRET_KEY=9A8B7C6D5E4F3G2H

# Main domain for the mail server
DOMAIN=swiftloopmarketing.com

# Public hostnames for the mail server (first is primary)
HOSTNAMES=mail.swiftloopmarketing.com

# Docker network subnet
SUBNET=192.168.203.0/24

# Postmaster local part
POSTMASTER=admin

# TLS configuration
# options: letsencrypt, cert, notls
TLS_FLAVOR=letsencrypt

###################################
# Mail settings
###################################

# Maximum message size (50MB)
MESSAGE_SIZE_LIMIT=50000000

# Message rate limit (per user per day)
MESSAGE_RATELIMIT=200

# Full text search language
FULL_TEXT_SEARCH=en

# Default quota for new mailboxes (in bytes, 1GB)
DEFAULT_QUOTA=1000000000

###################################
# Web settings
###################################

# Paths for web services
WEB_ADMIN=/admin
WEB_WEBMAIL=/webmail
WEB_API=/api

# Redirect root to admin login
WEBROOT_REDIRECT=/sso/login

# Site name for UI
SITENAME=SwiftLoop Mail
WEBSITE=https://swiftloopmarketing.com

###################################
# Admin account - automatic creation
###################################
INITIAL_ADMIN_ACCOUNT=admin
INITIAL_ADMIN_DOMAIN=swiftloopmarketing.com
INITIAL_ADMIN_PW=ChangeMe123!
INITIAL_ADMIN_MODE=ifmissing

###################################
# Antivirus / Antispam
###################################
# Threshold for spam filtering (0-100)
DEFAULT_SPAM_THRESHOLD=80

# Anti-virus action (discard or reject)
ANTIVIRUS_ACTION=discard

###################################
# Coolify / reverse proxy (optional)
# Uncomment and set when deploying behind Coolify so Mailu sees real client IPs
# and can complete Let's Encrypt HTTP-01 (proxy must forward to front:80).
###################################
# REAL_IP_HEADER=X-Forwarded-For
# REAL_IP_FROM=172.16.0.0/12
# REAL_IP_FROM=10.0.0.0/8
